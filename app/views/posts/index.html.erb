<head>
  <%= stylesheet_link_tag 'application', 'posts' %>
</head>

<div>
  <img class="user-photo" src="<%= @user.photo %>" alt="<%= @user.name %>'s Photo" width="100" height="100" />
</div>

<div>
  <strong class="title"><%= @user.name %></strong>
</div>

<div>
  <strong>Number of posts:</strong> <%= @user.post_counter %>
</div>

<% @user.posts.each do |post| %>
  <div>
    <h2><%= link_to post.title, user_post_path(@user, post) %></h2>
    <p><%= post.text %></p>

    <p><strong>Comments:</strong> <%= post.comments.count %></p>

    <p><strong>Likes:</strong> <%= post.likes.count %></p>

    <ul>
      <% post.recent_comments.each do |comment| %>
        <li>
          <%= comment.text %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>